{
	"name": "form-alchemist",
	"version": "0.0.3",
	"description": "A React form builder with a drag-and-drop interface, featuring a Builder component to create customizable forms and a Render component to display and validate them dynamically.",
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.es.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.es.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"rollup": "rollup -c --bundleConfigAsCjs",
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"preview": "vite preview"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"keywords": [
		"form",
		"builder",
		"react",
		"drag-and-drop",
		"dynamic",
		"validation"
	],
	"author": "Arjun KV",
	"license": "ISC",
	"dependencies": {
		"@dnd-kit/core": "^6.1.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.11.1",
		"@rollup/plugin-commonjs": "^26.0.1",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-terser": "^0.4.4",
		"@rollup/plugin-typescript": "^11.1.6",
		"@types/react": "^18.3.10",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react-swc": "^3.5.0",
		"eslint": "^9.11.1",
		"eslint-plugin-react-hooks": "^5.1.0-rc.0",
		"eslint-plugin-react-refresh": "^0.4.12",
		"globals": "^15.9.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"rollup": "^4.21.3",
		"rollup-plugin-dts": "^6.1.1",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-svg": "^2.0.0",
		"styled-components": "^6.1.13",
		"tslib": "^2.7.0",
		"typescript": "^5.5.3",
		"typescript-eslint": "^8.7.0",
		"vite": "^5.4.8"
	},
	"peerDependencies": {
		"react": ">=16.8",
		"react-dom": ">=16.8",
		"styled-components": "^6.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/arjunkv145/form-alchemist.git"
	},
	"homepage": "https://github.com/arjunkv145/form-alchemist#readme",
	"bugs": {
		"url": "https://github.com/arjunkv145/form-alchemist/issues"
	},
	"engines": {
		"node": ">=14.0.0"
	}
}
